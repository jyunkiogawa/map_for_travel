<!DOCTYPE html>
<html>
  <head>
    <title>ChattingTravel</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>" role="alert"><%= value %></div>
  <% end %>
  
  <nav class="navbar navbar-default navbar-fixed-top navbar-transparent">
    <div class="container">
      <%= link_to root_path do %>
        <span class="logo"><%= image_tag "logo4.png", class: "navbar-brand" %></span>
      <% end %>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li>
            <%= link_to kinds_index_path do %>
              <%= image_tag "kind.png" %>
            <% end %>
          </li>
          <li>
            <%= link_to favorites_index_path do %>
              <%= image_tag "heart_white.png" %>
            <% end %>
          </li>
          <li>
            <%= link_to users_edit_path, method: :put do %>
              <%= image_tag "edit.png" %>
            <% end %>
          </li>
          <li>
            <%= link_to logout_path, method: :delete do %>
              <%= image_tag "logout.png" %>
            <% end %>
          </li>
        <% else %>
          <li>
            <%= link_to users_new_path do %>
              <%= image_tag "register.png" %>
            <% end %>
          </li>
          <li>
            <%= link_to login_path do %>
              <%= image_tag "login.png" %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
  <%= yield %>
  <script>
    $(function(){
      $(".alert").fadeOut(5000);
    });
  </script>
  </body>
</html>
